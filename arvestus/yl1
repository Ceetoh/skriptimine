# Kuvab kuup채eva ja aja kujul "T채na on xx.xx.xxxx kell x:xx"
kuupaev=$(date +"%d.%m.%Y")
aeg=$(date +"%H:%M")
echo "T채na on $kuupaev kell $aeg"
